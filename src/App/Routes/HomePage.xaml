<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="App.Routes.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:App.Resources.Languages;assembly=App"
             Title="{resx:Translate PageTitleHome}"
             BackgroundColor="{DynamicResource PrimaryBackgroundColour}"
             HideSoftInputOnTapped="True"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout Margin="{StaticResource FormMargins}" VerticalOptions="Center">
        <Switch x:Name="themeSwitch"
                OnColor="{DynamicResource AccentColour}"
                IsToggled="False"
                Toggled="Switch_Toggled"/>
        <Button BackgroundColor="{DynamicResource AccentColour}"
                Clicked="Button_Clicked_1"
                Text="Animation page"
                TextColor="White"
                VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>